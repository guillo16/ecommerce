<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @category.photo %>);">
  <div class="d-flex align-item-center justify-content-center">
    <h1><%= @category.name %></h1>
  </div>
</div>


<div class="categories-filter">
  <div class="category-navbar d-flex justify-content-between align-items-center">
    <p><%= @category.products.count %> results</p>
    <button> + Open Filter</button>
  </div>

  <% @categories.each do |category| %>
  <%= link_to category_path(category)  do%>
  <%= category.name %>
  <% end %>
  <% end %>
</div>
<div class="product-cards">
  <% @category.products.each do |product| %>
  <%= render 'shared/cards', product: product %>
  <% end %>
</div>

<div class="home-end">
  <div class="boxes">
    <h2><i class="fas fa-credit-card"></i> Payment</h2>
    <p>Pay with VISA, MasterCard, or PayPal in our secure checkout.</p>
  </div>
  <div class="boxes">
    <h2><i class="fas fa-box-open"></i> Shipping & Returns</h2>
    <p>Free shipping on all orders over 150â‚¬/1500 kr. Free returns. Return within 60 days and get your money back.</p>
  </div>
  <div class="boxes">
    <h2><i class="fas fa-file-signature"></i> Extended Warranty</h2>
    <p>Two years warranty on all of our bags. We promise that they will last.
    </p>
  </div>
</div>










<div class="d-none">
  <%= render 'products/form', category: @category, product: @product %>
</div>

