<div class="cart-container">
  <div class="keep-shopping">
    <h2><i class="fas fa-shopping-bag"></i> Shopping Cart (<%= @cart.line_items.count %>)</h2>
    <p><%= link_to 'X', root_path %></p>
  </div>
  <div class="cart-items">
    <%= render(@cart.line_items) %>
  </div>
  <div class="price-top d-flex justify-content-between">
    <h3>Subtotal</h3>
    <p><span class="total-price"></span><%= number_to_currency(@cart.total_price) %></p>
  </div>
  <div class="price-top d-flex justify-content-between">
    <h3>Shipping</h3>
    <p>FREE</p>
  </div>

  <div class="price d-flex justify-content-between">
    <h3>Total</h3>
    <h2><span class="total-price"></span><%= number_to_currency(@cart.total_price) %></h2>
  </div>
  <div class="pl-3 pr-3">
    <button type="button" class="btn btn-primary btn-lg btn-block">PROCEED TO CHECKOUT</button>
  </div>


</div>


<div class="delete-cart">
    <p><%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "button-delete" %></p>
  </div>
