  <h2>douchbags</h2>
  <% end %>

  <div class="d-flex align-items-center d-sm-none">
     <div class="cart-item">
      <% if total_cart_items %>
      <%= link_to cart_path(@cart), class: "nav-link" do %>
      <span class="icon is-small">
        <i class="fas fa-shopping-bag"></i>
      </span>
      <span><%= cart_count_over_one %></span>
      <% end %>
      <% end %>
    </div>
