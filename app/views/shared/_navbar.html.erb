      <li class="nav-item ">
        <%= link_to "Stories", "#", class: "nav-link" %>
      </li>
      <li class="nav-item ">
        <%= link_to "About", "#", class: "nav-link" %>
      </li>
      <li class="nav-item  d-sm-none">
