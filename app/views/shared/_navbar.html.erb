      <% else %>

      <li class="nav-item ">
        <%= link_to "Shop", products_path, class: "nav-link" %>
      </li>
      <li class="nav-item ">
        <%= link_to "Stories", "#", class: "nav-link" %>
      </li>
      <li class="nav-item ">
        <%= link_to "About", "#", class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="d-none d-sm-block guillo">
    <div class="cart-item">
      <% if total_cart_items %>
      <%= link_to cart_path(@cart), class: "nav-link" do %>
      <span class="icon is-small">
        <i class="fas fa-shopping-bag"></i>
      </span>
      <span><%= cart_count_over_one %></span>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
